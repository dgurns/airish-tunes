{
  "private": false,
  "sideEffects": false,
  "scripts": {
		"build:css": "npx tailwindcss -m -i ./styles/app.css -o ./styles/generated-do-not-edit.css",
    "dev:css": "npx tailwindcss -w -i ./styles/app.css -o ./styles/generated-do-not-edit.css",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --binding $(cat .env) --port 3000 --compatibility-date=2022-12-08",
    "build": "yarn build:css && remix build",
    "dev": "yarn build && run-p dev:*",
    "start": "cross-env NODE_ENV=production yarn dev:wrangler"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.8.2",
    "@remix-run/cloudflare-pages": "^1.8.2",
    "@remix-run/react": "^1.8.2",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.8.2",
    "@remix-run/eslint-config": "^1.8.2",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "wrangler": "^2.2.1"
  },
  "engines": {
    "node": ">=16.17"
  }
}
